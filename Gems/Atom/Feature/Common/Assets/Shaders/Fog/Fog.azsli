#pragma once


real3 ApplyLinearFog(real3 originColor, real3 fogColor, float3 positionWS)
{

    float3 toCamera = ViewSrg::m_worldPosition.xyz - positionWS;
    float distanceToCamera = length(toCamera);

    float fogFactor = clamp((distanceToCamera - fogNear) / (fogFar - fogNear), 0.0, 1.0);

    return lerp(fogColor, originColor, saturate(fogFactor));
}
